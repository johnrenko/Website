---
// Root detector that redirects based on browser language
---
<noscript><meta http-equiv="refresh" content="0;url=/fr/" /></noscript>
<script>
(function(){
  var supported=['fr','en'];
  try{
    var saved=localStorage.getItem('lang');
    var langs=(navigator.languages||[navigator.language||'']).map(l=>String(l).toLowerCase());
    var base= saved && supported.includes(saved) ? saved
      : (langs.map(l=>l.split('-')[0]).find(l=>supported.includes(l))||'fr');
    var target='/' + base + '/';
    if(location.pathname==='/'||location.pathname==='/index.html') location.replace(target);
  }catch(e){ location.replace('/fr/'); }
})();
</script>
