---
// Props allow using the component with CMS entries or ad-hoc data
const {
  href = '#',
  company,
  role,
  title,
  cover,
  coverAlt = '',
} = Astro.props as {
  href?: string;
  company: string;
  role?: string;
  title: string;
  cover: string;
  coverAlt?: string;
};
---
<a href={href} class="work-card group" data-track="Work Card Click" data-prop-company={company} data-prop-destination={href}>
  <div class="work-card-image">
    {cover ? (
      <img src={cover} alt={coverAlt} class="work-card-img" loading="lazy" />
    ) : (
      <div class="work-card-placeholder">{`{IMAGE}`}</div>
    )}
  </div>

  <div class="work-card-content">
    <div class="work-card-meta">
      {company && <span class="work-card-company">{company}</span>}
      {company && role && <span class="work-card-separator">â€¢</span>}
      {role && <span class="work-card-role">{role}</span>}
    </div>
    <h3 class="work-card-title">
      {title}
    </h3>
  </div>
</a>


