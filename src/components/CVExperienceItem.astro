---
interface Props {
  role: string;
  period: string;
  description?: string;
  tags?: string[];
  logoSrc?: string; // public path like /images/cv/xxx.png
  logoAlt?: string;
}
const { role, period, description = '', tags = [], logoSrc, logoAlt = '' } = Astro.props as Props;
---
<li>
  <div class="flex items-start justify-between gap-4">
    <div class="flex align-center gap-6 min-w-0">
      {logoSrc && (
        <img src={logoSrc} alt={logoAlt} class="w-[60px] h-[60px]" loading="lazy" style="box-shadow: 2px 4px 8px #d3d3d3; border-radius: 4px;" />
      )}
      <div class="flex flex-col justify-center">
        <p class="font-semibold text-xl leading-6 font-serif">{role}</p>
        {description && (
          <p class="max-w-[600px]">{description}</p>
        )}
      </div>
    </div>
    <p class="text-sm text-gray-500 whitespace-nowrap">{period}</p>
  </div>
  {tags.length > 0 && (
    <div class="mt-2 flex flex-wrap gap-2 ml-21">
      {tags.map((t) => (
        <span class="inline-block rounded-full bg-gray-100 px-2 py-0.5 text-xs">{t}</span>
      ))}
    </div>
  )}
  <slot />
</li>


