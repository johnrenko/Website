---
interface Props {
  role: string;
  period: string;
  description?: string;
  tags?: string[];
  logoSrc?: string; // public path like /images/cv/xxx.png
  logoAlt?: string;
}
const { role, period, description = '', tags = [], logoSrc, logoAlt = '' } = Astro.props as Props;
---
<li class="timeline-item">
  <div class="timeline-content">
    <div class="timeline-header">
      <div class="timeline-logo">
        {logoSrc && (
          <img src={logoSrc} alt={logoAlt} class="company-logo" loading="lazy" />
        )}
      </div>
      <div class="timeline-info">
        <h4 class="timeline-role">{role}</h4>
        <p class="timeline-period">{period}</p>
      </div>
    </div>
    
    {description && (
      <p class="timeline-description">{description}</p>
    )}
    
    {tags.length > 0 && (
      <div class="timeline-tags">
        {tags.map((t) => (
          <span class="timeline-tag">{t}</span>
        ))}
      </div>
    )}
  </div>
  <slot />
</li>


